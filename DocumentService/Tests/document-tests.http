# Document Service API Testing
# Comprehensive test scenarios for Document Service API
# 
# Test Data Example:
# {
#   "id": "test-doc-1",
#   "tags": ["test", "document"],
#   "data": {
#     "key1": "value1",
#     "key2": 42
#   }
# }

# ------------------------------------------------------------
# Create a New Document
# Demonstrates document creation with comprehensive test data
# ------------------------------------------------------------
POST http://localhost:5000/documents
Content-Type: application/json; charset=UTF-8

{
    "id": "some-unique-identifier1",
    "tags": ["important", ".net"],
    "data": {
        "some": "data",
        "optional": "fields"
    }
}

# ------------------------------------------------------------
# Retrieve Document in Different Formats
# Demonstrates content negotiation and format flexibility
# ------------------------------------------------------------

# JSON
GET http://localhost:5000/documents/some-unique-identifier1
Accept: application/json

# XML
GET http://localhost:5000/documents/some-unique-identifier1
Accept: application/xml

# MessagePack
GET http://localhost:5000/documents/some-unique-identifier1
Accept: application/x-msgpack

# ------------------------------------------------------------
# Update Document
# Shows partial and full document updates
# ------------------------------------------------------------
PUT http://localhost:5000/documents/some-unique-identifier1
Content-Type: application/json

{
    "tags": ["updated", "important"],
    "data": {
        "some": "updated data",
        "new_field": "value"
    }
}

# ------------------------------------------------------------
# Delete Document
# Demonstrates document removal operation
# ------------------------------------------------------------
DELETE http://localhost:5000/documents/some-unique-identifier1